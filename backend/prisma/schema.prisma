generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id                Int     @id @default(autoincrement())
  name              String
  email             String  @unique
  passwordHash      String
  preferredWebsites Json
  preferences       Json
  phoneNumber       String?
}

model Article {
  id         Int      @id @default(autoincrement())
  url        String   @unique
  data       Json
  scrapedAt  DateTime @default(now())
  source     String
  categories Json?
}

model Category {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  source    String
}
